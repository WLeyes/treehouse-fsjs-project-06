extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 My Portfolio
      p.lead.text-light
        | Below are some examples of my work with links to live previews and GitHub repositories.
  article.grid-container.portfolio-index    
    .grid-x.grid-margin-x.small-up-1.medium-up-2.large-up-3
      each project in projects  
        .cell
          a(href=`/project-${project.id}`)
            img.thumbnail(src=`/static/img/${project.image_urls[0]}`)
            h5= project.project_name
      
